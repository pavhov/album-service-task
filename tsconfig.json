{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ESNext",
    "lib": [
      "ESNext"
    ],
    "types": [
      "node"
    ],
    "moduleResolution": "Node",
    "sourceRoot": "./src",
    "outDir": "./out",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "inlineSourceMap": true,
    "skipLibCheck": true
  },
  "files": [
    "src/Main.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
